<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBackSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="Back" />

    <TextView
        android:layout_toEndOf="@id/btnBackSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000" />

    <!-- Search Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchLayout"
        android:layout_below="@id/btnBackSearch"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Car ID to Search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchCarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Search Button -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/searchLayout"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Search Car" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Search"
            android:textSize="20sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Result -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_below="@+id/btnSearch"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp" />
</RelativeLayout>
