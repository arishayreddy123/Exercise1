<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F5F5F5"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvMainHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="40dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btnAddCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Add Car"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnUpdateCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Update Car"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnDeleteCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Delete Car"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSearchCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Search Car"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9C27B0"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnFetchActivity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Fetch Activity"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800" />

</LinearLayout>
