<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <Button
        android:id="@+id/btnAddCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Car"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDeleteCar"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnDeleteCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Car"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnAddCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnUpdateCar"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnUpdateCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update Car"
        android:backgroundTint="#FFEB3B"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSearchCar"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSearchCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search Car"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnUpdateCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
